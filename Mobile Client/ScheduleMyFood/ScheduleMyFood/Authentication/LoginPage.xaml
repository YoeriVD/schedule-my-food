<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScheduleMyFood.Authentication.LoginPage">
  <StackLayout Orientation="Vertical">
    <Label Text="Username" VerticalOptions="Center" HorizontalOptions="Center" />
    <Entry Text="{Binding Email}"></Entry>
    <Label Text="Password" VerticalOptions="Center" HorizontalOptions="Center" />
    <Entry Text="{Binding Password}" IsPassword="True"></Entry>
    <Button Text="Login" Command="{Binding PerformLogin}"></Button>
    <Button Text="Register" Command="{Binding PerformRegister}"></Button>
  </StackLayout>
</ContentPage>